<% @user ||= current_user %>
<div class="stats">
  <a href="<%= relationship_path(@user,type:'following') %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= relationship_path(@user,type:'followers') %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>